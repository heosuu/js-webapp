pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/heosuu/js-webapp'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-8' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-8' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker image build -t myweb .'
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker image tag myweb heosuu/myweb:${env.BUILD_NUMBER}'
        sh 'docker image tag myweb heosuu/myweb:latest'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
        sh 'docker image push myweb heosuu/myweb:$BUILD_NUMBER'
        sh 'docker image push myweb heosuu/myweb:latest'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
        docker { image 'docker:dind' }
      }
      steps {
        sh 'docker -H tcp://192.168.56.104:2375 container run --detach --name myweb -p 80:8080 myweb:$BUILD_NUMBER'
      }
    }
  }
}
